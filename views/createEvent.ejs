            </div>
            <div class="form-group text-left">
              <label for="eventDate">Event Date</label>
              <input type="date" class="form-control rounded-0" id="eventDate">
            </div>
            <div class="blurredbody2">
                <div class="form-group text-left" >
                    <label for="eventSchedule">Event Address <img src="public/images/location.png" /></label>
                    <input type="text" class="form-control rounded-0" id="eventSchedule" placeholder="Street Address" >
                  </div>
                  
                  <div class="row form-group">
                    <div class="col">
                      <input type="text" class="form-control rounded-0" placeholder="City">
                    </div>
                    <div class="col">
                      <input type="text" class="form-control rounded-0" placeholder="Zip Code">
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col">
                      <input type="text" class="form-control rounded-0" placeholder="State">
                    </div>
                    <div class="col">
                      <input type="text" class="form-control rounded-0" placeholder="Country">
                    </div>
                  </div>
            </div>

           

             <div class="form-group text-left" >
              <label for="eventSchedule">Event Schedule</label>
              <div class="input-group mb-3 text-left cal-grp">
                
                <input type="date" class="form-control rounded-0" aria-label="Recipient's username" aria-describedby="basic-addon2">
                <div class="input-group-append">
                  <span class="input-group-text rounded-0 calendar" id="basic-addon2">
                    <img class="calendar-img" src="/images/calendar.png"/>
                  </span>
                </div>
              </div>
              </div>
              
