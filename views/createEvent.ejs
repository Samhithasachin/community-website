<%- include('partials/header') %>

 
    <div class="blurredbody">
        
        <div class="col-md-10 offset-md-1 formClass">
        <form action="/create-event-free" method="post" enctype="application/x-www-form-urlencoded">
            <div class="form-group text-left" >
              <label for="eventName">Event Name</label>
              <input type="text" class="form-control rounded-0" id="eventName" name="eventName">
            </div>
            <div class="form-group text-left">
              <label for="eventDate">Event Date</label>
              <input type="date" class="form-control rounded-0" id="eventDate" name="eventDate">
            </div>
            <div class="blurredbody2">
                <div class="form-group text-left" >
                    <label for="eventSchedule">Event Address <img src="public/images/location.png" /></label>
                    <input type="text" class="form-control rounded-0" id="eventStreet" placeholder="Street Address" name="eventStreet" >
                  </div>
                  
                  <div class="row form-group">
                    <div class="col">
                      <input type="text" class="form-control rounded-0" placeholder="City" name="eventCity">
                    </div>
                    <div class="col">
                      <input type="text" class="form-control rounded-0" placeholder="Zip Code" name="eventZipcode">
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col">
                      <input type="text" class="form-control rounded-0" placeholder="State" name="eventState">
                    </div>
                    <div class="col">
                      <input type="text" class="form-control rounded-0" placeholder="Country" name="eventCountry">
                    </div>
                  </div>
            </div>

           

             <div class="form-group text-left" >
              <label for="eventSchedule">Event Schedule</label>
              <div class="input-group mb-3 text-left cal-grp">
                
                <input type="date" class="form-control rounded-0" aria-label="Recipient's username" aria-describedby="basic-addon2" name="eventSchedule">
                <div class="input-group-append">
                  <span class="input-group-text rounded-0 calendar" id="basic-addon2">
                    <img class="calendar-img" src="/images/calendar.png"/>
                  </span>
                </div>
              </div>
              </div>
              
            <button type="submit" class="btn btn-lg btn-primary submit_button">Create Event</button>
          </form>
        </div>
    </div>    
  </div>


  
